

.index-title {
  height: 75%;
  position: relative;

  @media $mobile-query {
    height: auto;
    padding-top:2em;
  }

}

.welcome-header {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  margin: auto;
  width: 500px;
  height: 350px;

  @media $mobile-query {
    position: relative;
    width: 100%;
    height: auto;
    padding: 10px;
  }
}

.home-condate {
  margin: 1em;
  color: #6E6F72;
  font-size: 24px;
  font-family: 'Lato', sans-serif;
  font-weight: 300;
  b {
    color: #D0272B;
  }
  strong {
    color: #04556A;
  }

  @media $mobile-iphone {
    font-size: 20px;
  }
}

.hero-text {
  font-size: 36px;
  line-height: 2;
  font-weight: bold;
  margin: 0.8em 0;
  font-family: 'Lato', sans-serif;
  font-weight: 700;

  @media $mobile-query {
    font-size: 30px;

  }
  @media $mobile-iphone {
    font-size: 20px;
  }
}


.home-sponsers {
  font-family: 'Lato', sans-serif;
  text-align: center;
  background: #fff;
  background: rgba(#fff, 0.4);
  color: #666;
  margin: -20px 0 0;
  padding: 30px 0 20px;
  position: relative;
  -webkit-box-shadow: 0 1px 2px rgba(#666, 0.1);
          box-shadow: 0 1px 2px rgba(#666, 0.1);

  h3, h4 {
    color: darken(#F6F5EF, 30%);
    margin: 5 0 15px;
  }
  p.apply {
    margin: 1.5em 0 1em;

    span.div-line {
      display: inline-block;
      height: 35px;
      line-height: 35px;
      border-right: 1px solid #ddd;
      margin: 0 15px 0 10px;
    }
  }
  .sponser-logos {
    margin: 5px;
    img {
      margin: 10px 5px;
    }
  }
  .sponser-more {
    margin: -3px 0 0;
    height: 0;

    a.btn {
      padding: 10px 20px;
      background-color: #F6F5EF;
      color: #999;
      border: none;

      &:hover {
        color: #000;
      }
    }
  }
}
